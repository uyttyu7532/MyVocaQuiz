<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VocListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D5DFE4"
            android:gravity="center"
            android:padding="25dp"
            android:text="영어단어장"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sortByRecent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentStart="true"
            android:layout_above="@id/recyclerView"
            android:clickable="true"
            android:text="기본"
            android:textColor="#000000"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/sortByABC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_above="@id/recyclerView"
            android:clickable="true"
            android:layout_toRightOf="@+id/sortByRecent"
            android:text="abc순"
            android:layout_margin="5dp"/>

        <Switch
            android:id="@+id/meaningSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignParentRight="true" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/meaningSwitch">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:clickable="true"
        android:tint="#ffffff"
        app:srcCompat="@drawable/plus" />

    </FrameLayout>